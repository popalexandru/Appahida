<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/repCount"
        android:text="8"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" kg"
        app:layout_constraintLeft_toRightOf="@id/repCount"
        app:layout_constraintTop_toTopOf="@id/repCount"
        app:layout_constraintBottom_toBottomOf="@id/repCount"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="70"
        android:id="@+id/repWeight"
        app:layout_constraintTop_toBottomOf="@id/repCount"
        app:layout_constraintLeft_toLeftOf="@id/repCount"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" reps"
        app:layout_constraintLeft_toRightOf="@id/repWeight"
        app:layout_constraintTop_toTopOf="@id/repWeight"
        app:layout_constraintBottom_toBottomOf="@id/repWeight"/>


</androidx.constraintlayout.widget.ConstraintLayout>